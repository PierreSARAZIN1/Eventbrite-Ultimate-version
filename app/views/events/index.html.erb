<h1> 👯‍♀️ Voici tous les Events 👯 </h1>
<br>
<br>
<div class="container text-center" >
<button type="button" class="btn btn-info btn-lg btn-block"><%= link_to "Clique ici pour créer un événement", new_event_path %> </button>

</div>
<br>
<br>

<% params[:event_array].each do |event| %>
   
    <a href="<%=envent_path(event.id)%>" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">

      <h5 class="mb-1"><%=event.title%></h5>
      
    </div>
    <p class="mb-1"><%=event.description%></p>
    
  </a>
<% end %>

